{{ form_start(form) }}
<div class="form-group">
	{{ form_label(form.part, null, {'attr': {'class': 'form-label'}}) }}
	{{ form_widget(form.part, {'attr': {'class': 'form-input'}}) }}
</div>
<div class="form-group">
	{{ form_label(form.quantity, null, {'attr': {'class': 'form-label'}}) }}
	{{ form_widget(form.quantity, {'attr': {'class': 'form-input'}}) }}
</div>

<div class="form-actions">
	<button type="submit" class="btn btn-primary">
		{{ button_label|default('Save') }}
	</button>
</div>
{{ form_end(form) }}
